<% layout('layouts/boilerplate') %>

<div class="row">
  <div class="col-8 offset-2">
    <h3>Listing Details :</h3>
  </div>

  <div class="card col-6 offset-2 show-img">
    <img
      src="<%= listing.image && listing.image.url ? listing.image.url : 'https://via.placeholder.com/600x400?text=No+Image' %>"
      class="card-img-top show-img"
      alt="Listing Image"
    />

    <div class="card-body">
      <p class="card-text">
        <strong><%= listing.title %></strong><br />
        <%= listing.description %><br />
        ₹ <%= listing.price.toLocaleString("en-IN") %><br />
        <%= listing.location %><br />
        <%= listing.country %>
      </p>
    </div>
  </div>

  <div class="col-8 offset-2 btns mt-3">
    <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark me-2">Edit</a>
    <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
      <button class="btn btn-danger">Delete</button>
    </form>
  </div>
</div>





 














 
