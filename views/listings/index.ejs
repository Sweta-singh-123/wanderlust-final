        { icon: "ðŸŠ", label: "Amazing Pool" },
        { icon: "ðŸ•ï¸", label: "Camping" },
        { icon: "ðŸŒ¾", label: "Farm" },
        { icon: "ðŸšï¸", label: "Domes" },
