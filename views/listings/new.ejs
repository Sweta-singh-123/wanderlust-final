<% layout('layouts/boilerplate') %>

<div class="container mt-5">
  <h2 class="mb-4">Add a New Listing</h2>

  <form action="/listings" method="POST" class="needs-validation" novalidate>
    <div class="mb-3">
      <label for="title" class="form-label">Title</label>
      <input type="text" name="listing[title]" class="form-control" id="title" required>
    </div>

    <div class="mb-3">
      <label for="description" class="form-label">Description</label>
      <textarea name="listing[description]" class="form-control" id="description" rows="4"></textarea>
    </div>

    <div class="mb-3">
      <label for="image" class="form-label">Image URL</label>
      <input type="url" name="listing[image]" class="form-control" id="image" placeholder="https://example.com/image.jpg">
      <div class="form-text">Provide a direct URL to an image. Example: from Unsplash or Cloudinary.</div>
    </div>

    <div class="mb-3">
      <label for="price" class="form-label">Price (INR)</label>
      <input type="number" name="listing[price]" class="form-control" id="price" min="0" required>
    </div>

    <div class="mb-3">
      <label for="location" class="form-label">Location (City, State)</label>
      <input type="text" name="listing[location]" class="form-control" id="location">
    </div>

    <div class="mb-3">
      <label for="country" class="form-label">Country</label>
      <input type="text" name="listing[country]" class="form-control" id="country">
    </div>

    <button type="submit" class="btn btn-success">➕ Create Listing</button>
    <a href="/listings" class="btn btn-secondary ms-2">⬅ Back</a>
  </form>
</div>


